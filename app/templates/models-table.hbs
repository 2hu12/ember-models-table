<div class="models-table-wrapper">
  <table class="table table-striped table-bordered table-condensed">
    <thead>
      <tr>
        {{#each column in columns}}
          <td {{bind-attr class=":table-header"}} {{action "sort" column}}>
            {{column.title}} <i {{bind-attr class="column.sortAsc:fa-sort-asc column.sortDesc:fa-sort-desc :fa"}}></i>
          </td>
        {{/each}}
      </tr>
    </thead>
    <tbody>
    {{#each record in visibleContent}}
      <tr>
        {{#each column in columns}}
          <td>
            {{#if column.isHtml}}
              {{{object-property record column.propertyName}}}
            {{else}}
              {{object-property record column.propertyName}}
            {{/if}}
          </td>
        {{/each}}
      </tr>
    {{/each}}
    </tbody>
  </table>
  {{#if showTableFooter}}
    <div class="table-footer clearfix">
      <div class="table-summary col-md-9 col-sm-9">
        {{summary}}
      </div>
      <div class="col-md-2 col-sm-2">
        <div class="pull-right">
          {{view "select"
          content=pageSizeValues
          selection=pageSize
          class="form-control"
          }}
        </div>
      </div>
      <div class="table-nav col-md-1 col-sm-1">
        <a href="#" {{action "gotoFirst"}} {{bind-attr class="gotoBackEnabled:enabled:disabled"}}><i
            class="fa fa-angle-double-left"></i></a>&nbsp;
        <a href="#" {{action "gotoPrev"}} {{bind-attr class="gotoBackEnabled:enabled:disabled"}}><i
            class="fa fa-angle-left"></i></a>&nbsp;
        <a href="#" {{action "gotoNext"}} {{bind-attr class="gotoForwardEnabled:enabled:disabled"}}><i
            class="fa fa-angle-right"></i></a>&nbsp;
        <a href="#" {{action "gotoLast"}} {{bind-attr class="gotoForwardEnabled:enabled:disabled"}}><i
            class="fa fa-angle-double-right"></i></a>
      </div>
    </div>
  {{/if}}
</div>