{{#if hasBlock}}
  {{yield
    (hash
      record=record
      index=index
      column=column
      sendAction=sendAction
      expandRow=expandRow
      collapseRow=collapseRow
      expandAllRows=expandAllRows
      collapseAllRows=collapseAllRows
      themeInstance=themeInstance
      clickOnRow=clickOnRow
      isExpanded=isExpanded
      isSelected=isSelected
    )
  }}
{{else}}
  {{component
    column.component
    record=record
    index=index
    column=column
    sendAction=sendAction
    expandRow=expandRow
    collapseRow=collapseRow
    expandAllRows=expandAllRows
    collapseAllRows=collapseAllRows
    clickOnRow=clickOnRow
    themeInstance=themeInstance
    isExpanded=isExpanded
    isSelected=isSelected
  }}
{{/if}}