{{#if hasBlock}}
  {{yield
    (hash
      gotoCustomPage=(action "gotoCustomPage")
      sendAction=sendAction
      visiblePageNumbers=visiblePageNumbers
      themeInstance=themeInstance
    )}}
{{else}}
  <div class={{themeInstance.paginationInternalWrapper}} role="toolbar">
    <div class={{themeInstance.paginationBlock}} role="group">
      {{#each visiblePageNumbers as |page|}}
        {{#if page.isLink}}
          <button
            type="button" {{action "gotoCustomPage" page.label}}
            class="{{themeInstance.paginationNumericItem}} {{if page.isActive themeInstance.paginationNumericItemActive}} {{themeInstance.buttonDefault}}">
            {{page.label}}
          </button>
        {{else}}
          <button
            type="button" {{action "gotoCustomPage" page.label}}
            disabled="disabled"
            class="{{themeInstance.buttonDefault}} {{themeInstance.paginationNumericItem}}">
            {{page.label}}
          </button>
        {{/if}}
      {{/each}}
    </div>
  </div>
{{/if}}